<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/back_arrow"
                   android:id="@+id/Payouts_Back"
                   android:layout_marginTop="15dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginBottom="15dp"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/payouts"
                  android:textAllCaps="true"
                  android:layout_centerHorizontal="true"
                  android:layout_margin="15dp"
                  android:textStyle="bold"
                  android:fontFamily="@font/quick_sales"
                  android:textSize="20sp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_below="@id/Payouts_Back"
                  android:background="#cacaca"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

        <TextView
                android:id="@+id/txtDailly"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:text="@string/daily"
                android:background="#74B8D6"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txtweekly"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/weekly"
                android:paddingTop="20dp"
                android:textSize="18sp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txtMonthly"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/monthly"
                android:textSize="18sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/layWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="5">

        <TextView
                android:id="@+id/week1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="#74B8D6"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/week2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/week3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/week4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/week5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="2">
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

            <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/total_delivery"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/totDelivery"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:paddingTop="20dp"
                        android:textSize="16sp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/earnings"
                        android:paddingTop="20dp"
                        android:textSize="16sp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/totearning"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/rating_incentive"
                        android:textSize="16sp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/totincentive"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>



            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="@string/total_earning"
                        android:textSize="16sp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/totEarningsum"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>