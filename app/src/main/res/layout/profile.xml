                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rating_primary"
                                android:layout_below="@id/dl_expiry_name"
                                android:layout_marginTop="10dp"/>

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rating_primary"
