<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/white_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/default_pic" />


    <ImageView
        android:id="@+id/changedp"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignEnd="@id/profile_pic"
        android:layout_alignBottom="@id/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/buttonbackground"
        android:padding="2dp"
        android:src="@drawable/camera" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_name"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/id_no" />

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/id_no"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/id_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/id_value"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/call_black" />

            <TextView
                android:id="@+id/phone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/phone_no"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/phone_no_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_value"
                android:layout_alignBaseline="@id/phone_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/phone_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/id_no" />

            <TextView
                android:id="@+id/adhar_mame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/adhar_no"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/adhar_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/adhar_mame"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/pan_no" />

            <TextView
                android:id="@+id/pan_no_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adhar_mame"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/pan_no"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/pan_no_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adhar_mame"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/pan_no_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/payouts" />

            <TextView
                android:id="@+id/dl_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pan_no_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/dl_no"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/dl_no_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dl_expiry_value"
                android:layout_below="@id/pan_no_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/dl_name_value"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_date_range_black_24dp" />

            <TextView
                android:id="@+id/dl_expiry_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dl_name_value"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/dl_expiry"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/dl_expiry_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dl_name_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/dl_expiry_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ratings" />

            <TextView
                android:id="@+id/rating_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dl_expiry_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/ratings"
                android:textColor="@color/colorAccent" />


            <RatingBar
                android:id="@+id/ratingProfile"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/extra_cash_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />
            <!--
                        <LinearLayout android:layout_width="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_below="@id/dl_expiry_name"
                                      android:layout_alignParentEnd="true"
                                      android:layout_marginEnd="15dp"
                                      android:layout_height="wrap_content">


                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/rating_primary"
                                    android:layout_marginTop="10dp"/>

