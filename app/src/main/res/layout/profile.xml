                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rating_star_gray"
                                android:layout_below="@id/dl_expiry_name"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>
            -->

            <TextView
                android:id="@+id/extra_cash_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/extra_cash"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/rating_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/extra_cash" />

            <TextView
                android:id="@+id/extra_cash_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/rating_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/app_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/extra_cash_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_version"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/extra_cash_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_phonelink_setup_black_24dp" />

            <TextView
                android:id="@+id/app_version_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/extra_cash_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/app_version_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/maximum_security" />


            <TextView
                android:id="@+id/maximum_security_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_version_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/max_security"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/security_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_version_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />


            <RelativeLayout
                android:id="@+id/bank_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/maximum_security_name"
                android:layout_marginTop="15dp"
                android:background="@color/grey">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="@string/bank_details"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/edit_bank_details"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/buttonbackground"
                    android:padding="2dp"
                    android:src="@drawable/edit" />
            </RelativeLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/bank_detail_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ifsc_code" />

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_detail_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/bank_name"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/bank_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/bank_detail_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/bank_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/pan_no" />

            <TextView
                android:id="@+id/account_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_name_value"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/bank_account_no"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/account_no_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/account_no_value"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ifsc_code" />

            <TextView
                android:id="@+id/ifsc_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_no"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/ifsc_code"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/ifsc_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_no_value"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ifsc_code"
                android:layout_marginTop="20dp"
                android:background="@color/grey"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/assets"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@id/assets"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/vehicle" />

            <TextView
                android:id="@+id/vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/assets"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/vehicle"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/vehicle_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/assets"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/uploadDoc"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_below="@+id/vehicle_value"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"
                android:background="@color/colorPrimary"
                android:text="@string/upload_document"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>